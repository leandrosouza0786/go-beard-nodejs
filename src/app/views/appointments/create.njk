{% extends "_layouts/default.njk" %}

{% block body %}
    <div class="content">
        <strong>
            Agendamento de hor√°rio
        </strong>

        <div class="provider">
            <div>
                <img src="/files/{{ provider.avatar }}" alt="">
                <strong>{{ provider.name }}
                </strong>
            </div>
        </div>

        <form action="/app/appointments/new/{{ provider.id }}" method="post">
            <input type="text" class="flatpickr" placeholder="escolha uma data">

            <div id="hours"></div>
        </form>
        <script type="text/javascript">
            flatpickr('.flatpickr', {
                minDate: new Date(),
                dateFormat: 'd/m/y',
                onChange: function (date) {
                    fetch(`/app/avaibled/{{ provider.id }}?data=${date[0].getTime()}`).then(function (response) {
                        response
                            .text()
                            .then(function (html) {
                                document.getElementById('hours').innerHTML = html
                            })
                    })
                }
            })
        </script>
        <button type="submit">
            Agendar
        </button>
    </div>
{% endblock %}